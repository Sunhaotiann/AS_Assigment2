@page
@model AS_Assigment2.Pages.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="container mt-5">
    <h2 class="text-center">Reset Password</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="ResetPasswordModel.CurrentPassword"></label>
            <input asp-for="ResetPasswordModel.CurrentPassword" class="form-control" type="password" />
            <span asp-validation-for="ResetPasswordModel.CurrentPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ResetPasswordModel.NewPassword"></label>
            <input asp-for="ResetPasswordModel.NewPassword" class="form-control" type="password" />
            <span asp-validation-for="ResetPasswordModel.NewPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ResetPasswordModel.ConfirmPassword"></label>
            <input asp-for="ResetPasswordModel.ConfirmPassword" class="form-control" type="password" />
            <span asp-validation-for="ResetPasswordModel.ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Reset Password</button>
    </form>
</div>
